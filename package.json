{
  "name": "typescript-template",
  "version": "1.0.0",
  "description": "Basic template for writing and running Typescript files",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "build": "run-p -s build:*",
    "build:main": "babel -x .ts -d dist src",
    "build:types": "tsc",
    "dev": "yarn build && yarn start",
    "watch:build": "yarn tsc && yarn build:main --watch",
    "watch:start": "nodemon dist/index.js",
    "watch": "concurrently -k \"yarn watch:build\" \"yarn watch:start\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint '*/**/*.ts'",
    "compose:dev": "docker-compose -f docker-compose.yaml -f docker-compose.dev.yaml up -d --build && yarn compose:logs",
    "compose:prod": "docker-compose up -d --build && yarn compose:logs",
    "compose:logs": "docker-compose logs -f"
  },
  "author": "James Giesbrecht",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.22.15",
    "@babel/core": "^7.17.12",
    "@babel/preset-env": "^7.17.12",
    "@babel/preset-typescript": "^7.22.15",
    "babel-plugin-add-import-extension": "^1.6.0",
    "@types/body-parser": "^1.19.4",
    "@types/express": "^4.17.18",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "concurrently": "^8.0.1",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "http-proxy-middleware": "^2.0.6",
    "morgan": "^1.10.0",
    "morgan-body": "^2.6.9"
  }
}
